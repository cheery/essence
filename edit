import time, math

def on_frame(screen):
    global view
    screen(background_color)
    width, height = screen.size

    now = time.time()
    left = math.cos(now) * 100 + 100
    top  = math.sin(now) * 100 + 100
    right  = math.cos(now*2) * 100 + width  - 100
    bottom = math.sin(now*2) * 100 + height - 100


